{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "svelte.config.js"],
  "exclude": ["node_modules"]
}
